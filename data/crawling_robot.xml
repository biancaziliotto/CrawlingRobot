<mujoco>
    <option gravity="0 0 -9.81" timestep="0.002" solver="PGS" iterations="50"/>

    <actuator>
        <motor joint="joint1" ctrlrange="-1 1"/>
        <motor joint="joint2" ctrlrange="-1 1"/>
    </actuator>

    <sensor>
        <frameangvel name="link1_vel" objtype="body" objname="link1"/>
        <frameangvel name="link2_vel" objtype="body" objname="link2"/>
        <touch name="floor_touch" site="link2_endpoint"/>
    </sensor>

    <asset>
        <texture name="grid" type="2d" builtin="checker" width="512" height="512" rgb1="0.8 0.8 0.8" rgb2="0.6 0.6 0.6"/>
        <material name="grid_material" texture="grid" texrepeat="10 10"/>
    </asset>

    <worldbody>
        <light name="top" pos="0 0 10"/>

        <camera name="side_view" pos="0.3 -0.6 0.2" xyaxes="1 0 0 0 0 1"/>

        <body name="base" pos="0 0 0.05">
            <geom name="base_geom" type="box" size="0.05 0.05 0.05" rgba="1 0 0 1" mass="0.1" contype="1" conaffinity="1"/>
            <joint name="base_joint" type="free"/>
            
            <!-- First joint and link -->
            <body name="link1" pos="0.05 0 0">
                <joint name="joint1" type="hinge" axis="0 1 0" range="-90 90"/>
                <geom name="link1_geom" type="capsule" fromto="0 0 0 0.2 0 0" size="0.01" rgba="0 0 1 1" mass="0.1" contype="1" conaffinity="1"/>

                <!-- Second joint and link -->
                <body name="link2" pos="0.2 0 0">
                    <joint name="joint2" type="hinge" axis="0 1 0" range="-120 120"/>
                    <geom name="link2_geom" type="capsule" fromto="0 0 0 0.2 0 0" size="0.01" rgba="0 1 0 1" mass="0.1" contype="1" conaffinity="1"/>

                    <!-- Rounded tip -->
                    <geom name="link2_tip" type="sphere" pos="0.2 0 0" size="0.015" rgba="0 1 0 1" mass="0.02" contype="1" conaffinity="1"/>

                    <site name="link2_endpoint" pos="0.25 0 0" size="0.001" rgba="0.5 0.5 0.5 0.5"/>
                </body>

            </body>
        </body>

        <!-- Floor geometry with friction and solimp to avoid penetration -->
        <geom name="floor" type="plane" pos="0 0 -0.05" size="1 1 0.1" material="grid_material" friction="0.5 0.5 0.01" solimp="0.9 0.95 0.001" contype="1" conaffinity="1"/>
    </worldbody>

</mujoco>
